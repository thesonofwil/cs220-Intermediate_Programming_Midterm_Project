// Program to call functions on an image. Return 0 if no errors.

#include <stdio.h>
#include <stdlib.h>
#include "ppm_io.c"
#include "ppm_io.h"

int main(int argc, char *argv[]) {
  FILE *input;
  char *filename;

  if (argc < 2) { // Exxecutable + file = 2
    fprintf(stderr, "Error: please input a filename to be read. \n");
    exit(1);
  } else {
    filename = argv[1]; // argv[0] = executable, argv[1] = file
  }

  // Open file in reading and binary mode
  input = fopen(filename, "rb");
  if (!input) {
    fprintf(stderr, "Error: file could not be opened. \n");
    exit(2);
  }

  return 0; // no errors
}
